Imports System.Data.SqlClient
Public Class Form1
    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        Dim ds As New DataSet
        Dim path As String = Application.StartupPath & "\Mahasiswa30121453.xml"

        Try
            Using conn As New SqlConnection("Data Source=GLENN\SQLEXPRESS;Initial Catalog=pert8_intro;Integrated Security=SSPI")
                Dim da As New SqlDataAdapter("SELECT * FROM tbl_mhs", conn)
                da.Fill(ds)
            End Using

            ds.WriteXml(path)
            MsgBox("Done" & vbCrLf & path)

        Catch ex As Exception
            MsgBox(ex.Message)
        End Try
    End Sub
End Class
