Public Class Form1
    Dim arr As New ArrayList()

    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load

    End Sub

    Private Sub btnTambah_Click(sender As Object, e As EventArgs) Handles btnTambah.Click
        Dim kata As String = txtKata.Text.Trim()
        If kata = "" Then
            MsgBox("Isi kata dahulu!", MsgBoxStyle.Exclamation, "Peringatan")
        End If

        For Each item As String In listKata.Items
            If String.Equals(item, kata, StringComparison.OrdinalIgnoreCase) Then
                MsgBox("Kata sudah ada!")
                txtKata.Clear()
                Exit Sub
            End If
        Next

        arr.Add(txtKata.Text)
        listKata.Items.Add(txtKata.Text)
        txtKata.Clear()

    End Sub

    Private Sub btnPanjang_Click(sender As Object, e As EventArgs) Handles btnPanjang.Click
        If listKata.SelectedItems.Count > 0 Then
            Dim total As Integer = 0
            For Each item As String In listKata.SelectedItems
                total += item.Length
            Next
            MsgBox("panjang kata : " & total)
        Else
            MsgBox("Pilih kata dahulu!")
        End If

    End Sub

    Private Sub btnGabung_Click(sender As Object, e As EventArgs) Handles btnGabung.Click
        If listKata.SelectedItems.Count > 1 Then
            Dim hasil As String = String.Join(" ", listKata.SelectedItems.Cast(Of String)())
            MsgBox("Hasil gabungan: " & hasil.Trim())
        Else
            MsgBox("Pilih minimal 2 kata dari ListBox!", MsgBoxStyle.Exclamation, "Peringatan")
        End If

    End Sub

    Private Sub btnHapus_Click(sender As Object, e As EventArgs) Handles btnHapus.Click
        If listKata.SelectedItems.Count > 0 Then
            For Each item As String In listKata.SelectedItems.Cast(Of String).ToList()
                listKata.Items.Remove(item)
            Next
            MsgBox("Kata Berhasi Dihapus!", MsgBoxStyle.Information, "Sukses")
        Else
            MsgBox("Tidak ada kata yang dipilih!", MsgBoxStyle.Exclamation, "Peringatan")
        End If


    End Sub
End Class
